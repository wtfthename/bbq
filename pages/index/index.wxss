@font-face {
    font-family: 'iconfont';
    src: url(data:application/font-woff;charset=utf-8;base64,) format('woff'),
        url('iconfont.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}
.iconfont {
  font-family:"iconfont" !important;
  font-size:80rpx;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-gouwuche:before { content: "\e61a"; }
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.page__hd {
  width: 100%;
  height: 30%;
}
.page__hd swiper {
  height: 100%;
}
.weui-tab {
  height: 70%;
}
.page__hd image {
  width: 100%;
  height: 100%
}
.weui-tab__content {
  padding: 10px 0;
  display: flex;
  flex-direction: column;
}
.item {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.item>button {
  text-align: left;
}
.numCtrl {
  display: flex;
  text-align: center;
  /* padding-right: 20px; */
}
.numCtrl button {
  margin: 0;
  padding: 0;
  width: 70rpx;
  height: 45rpx;
  margin-right: 10px;
  line-height: 45rpx;
}
.numCtrl button:nth-child(1){
  border-radius: 50%;
}
.numCtrl button:nth-child(2){
  background-color: #fa8919;
}
.numCtrl button:nth-child(3){
  border-radius: 50%;
}
.weui-tab__panel {
  padding-bottom: 80rpx;
}
.car {
  position: absolute;
  left:65rpx;
  top:-10rpx;
  font-size:12px;
  padding:5rpx 10rpx;
  height:30rpx;
  background-color:#fff;
  line-height:30rpx;
  text-align:center;
  border-radius:50%;
}
.dialog {
  padding-top: 30px;
  display: flex;
  flex-direction: column;
  text-align: center;
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: yellow;
  z-index: 999;
  opacity: 0.8;
}